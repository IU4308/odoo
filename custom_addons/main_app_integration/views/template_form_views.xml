<odoo>
  <record id="view_template_form_tree" model="ir.ui.view">
    <field name="name">template.form.tree</field>
    <field name="model">template.form</field>
    <field name="type">tree</field> 
    <field name="arch" type="xml">
      <tree>
        <field name="title"/>
        <field name="author"/>
      </tree>
    </field>
  </record>

  <record id="view_template_form_form" model="ir.ui.view">
    <field name="name">template.form.form</field>
    <field name="model">template.form</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <form string="Template Form">
        <sheet>
          <group>
            <field name="title"/>
            <field name="author"/>
            <field name="description"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_template_form" model="ir.actions.act_window">
    <field name="name">Template Forms</field>
    <field name="res_model">template.form</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_template_form_root" name="Template Forms"/>
  <menuitem id="menu_template_form" name="Forms" parent="menu_template_form_root" action="action_template_form"/>
</odoo>